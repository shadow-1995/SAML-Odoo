<odoo>
  <data>
      <record id="ticket_system_tree" model="ir.ui.view">
          <field name="name">Ticket System Tree View</field>
          <field name="model">ticket_system.ticket_system</field>
          <field name="arch" type="xml">
              <tree string="All Tickets">
                  <field name = 'name'/>
                  <field name = 'customer_id'/>
                  <field name = 'assigned_to'/>
                  <!--field name = 'stage'/-->
              </tree>
          </field>          
      </record>
      
      <record id="view_student_form" model="ir.ui.view">
            <field name="name">Ticket System Form View</field>
            <field name="model">ticket_system.ticket_system</field>
            <field name="arch" type="xml">
                <form string="All Tickets">
                    <header>
                        <button name="assign_ticket_to_self" string="Assing To Me" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active_button" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;"><field name="name" required="1" placeholder="Subject...." /></td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                            <group col="4" colspan="4"
                                name="personal_detail">
                                <field name="helpdesk_team" />
                                <field name="assigned_to" />
                                <field name="priority" />
                                <field name="customer_id"/>
                                <field name="customer_name"/>
                                <field name="customer_email"/>
                                <field name="ticket_type"/>
                                <field name="ticket_tag"/>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>
         <record id="ticket_system.all_ticket_action" model="ir.actions.act_window">
             <field name="name">All Tickets</field>
             <field name="res_model">ticket_system.ticket_system</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="domain">[]</field><field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new ticket</p>
             </field>
          </record>
        <!-- Top menu item -->
        <menuitem name="Ticket System" id="ticket_system.menu_root"/>
        <!-- menu categories -->
        <menuitem name="All Tickets" id="ticket_system.menu_1" parent="ticket_system.menu_root" action="ticket_system.all_ticket_action"/>
         <menuitem name="Configration" id="ticket_system.configration" parent="ticket_system.menu_root"/>
      
  </data>
</odoo>
