<odoo>
  <data>
        <record id="view_teacher_tree" model="ir.ui.view">
            <field name="name">student.teacher.tree</field>
            <field name="model">student.teacher</field>
            <field name="arch" type="xml">
                <tree string="Teacher">            
                    <field name="teacher_name" />
                    <field name="teacher_id" />
                    <field name="teacher_qualification" />
                    <field name="contact_number" />

                </tree>
            </field>
        </record>
        <record id="view_teacher_form" model="ir.ui.view">
            <field name="name">student.teacher.form</field>
            <field name="model">student.teacher</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Teacher">
                    <sheet>
                        <field name="photo" widget="image" class="oe_left oe_avatar" />
                    
                        <notebook colspan="4">
                            <page name="teacher_detail" string="Teacher Details">
                                <group col="4" colspan="4" name="teacher_detail">
                                    <field name="teacher_name" />
                                    <field name="teacher_id" />
                                    <field name="teacher_qualification" />
                                    <field name="contact_number" />
                                    <field name="teacher_houseno" />
                                    <field name="teacher_streetno" />
                                    <field name="teacher_locality" />
                                    <field name="teacher_city" />
                                    <field name="teacher_pincode" />
                                    <field name="teacher_state" />
                                    <field name="teacher_shift" />
                                </group>
                             </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_view_teacher">
            <field name="name">Teacher</field>
            <field name="res_model">student.teacher</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Provide Teacher details
                </p>
            </field>
        </record>
        <menuitem id="menu_school" name="School"/>
        <menuitem id="school_teacher" name="Teacher" parent="menu_school"
                  action="action_view_teacher"/>
  </data>
</odoo>