<odoo>
  <data>
        <record id="view_class_tree" model="ir.ui.view">
            <field name="name">student.class.tree</field>
            <field name="model">student.class</field>
            <field name="arch" type="xml">
                <tree string="Class">
                    <field name="class_name" />
                    <field name="class_section" />
                    <field name="class_medium" />
                    <field name="class_teacher" />
                    <field name="class_shift" />
                    
                </tree>
            </field>
        </record>
      <record id="view_class_form" model="ir.ui.view">
            <field name="name">student.class.form</field>
            <field name="model">student.class</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Class">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:8px;"><field name="class_name" required="1" placeholder="Class" /></td>
                                        <td style="padding-right:8px;"><field name="class_medium" required="1" placeholder="Medium" /></td>
                                        <td style="padding-right:8px;"><field name="class_shift" required="1" placeholder="Shift" /></td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <notebook colspan="4">
                            <page name="class_information" string="Class Information">
                                <group col="4" colspan="4" name="class_detail">
                                    <field name="class_teacher" />
                                    <field name="class_section" />
                                    <field name="number_of_subjects" />
                                
                                </group>
                             </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_view_class">
            <field name="name">Class</field>
            <field name="res_model">student.class</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Provide all class detail
                </p>
            </field>
        </record>
        <menuitem id="school_class" name="Class" parent="menu_school"
                  action="action_view_class"/>
  </data>
</odoo>