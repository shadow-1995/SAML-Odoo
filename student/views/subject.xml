<odoo>
    <data>
        <record id="view_subject_tree" model="ir.ui.view">
            <field name="name">student.subject.tree</field>
            <field name="model">student.subject</field>
            <field name="arch" type="xml">
                <tree string="Subject">
                    <field name="subject" />
                </tree>
            </field>
        </record>
        <record id="view_subject_form" model="ir.ui.view">
            <field name="name">student.subject.form</field>
            <field name="model">student.subject</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Subject">
                    <sheet>
                        <group col="4" colspan="4" name="subject_detail">
                            <field name="subject" />
                            <field name="marks" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_view_subject">
            <field name="name">Subject</field>
            <field name="res_model">student.subject</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Subject detail
                </p>
            </field>
        </record>
        <menuitem id="menu_school" name="School"/>
        <menuitem id="school_subject" name="Subject" parent ="menu_school"
                  action="action_view_subject"/>
             
    </data>
</odoo>