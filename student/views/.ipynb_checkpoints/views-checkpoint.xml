<odoo>
  <data>
        <record id="view_student_tree" model="ir.ui.view">
            <field name="name">student.student.tree</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <tree string="Student">
                    <field name="admission_number" />
                    <field name="first_name" />
                    <field name="middle_name" />
                    <field name="last_name" />
                    <field name="student_father_name" />
                    <field name="student_mother_name" />
                    <field name="student_gender" />
                    <field name="student_age" />
                    <field name="student_dob" />
                    
                    
                </tree>
            </field>
        </record>
      <record id="view_student_form" model="ir.ui.view">
            <field name="name">student.student.form</field>
            <field name="model">student.student</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Student">
                    <sheet>
                        <field name="photo" widget="image" class="oe_left oe_avatar" />
                    
                        <notebook colspan="4">
                            <page name="acedmic_detail" string="Acedmic Details">
                                <group col="4" colspan="4" name="acedmic_detail">
                                    <field name="acedmic_year" />
                                    <field name="admission_number" />
                                    <field name="admission_date" />
                                    <field name="first_name" />
                                    <field name="middle_name" />
                                    <field name="last_name" />
                                    <field name="student_age" />
                                    <field name="student_dob" />
                                    <field name="student_gender" />
                                    <field name="student_blood_group" />
                                    <field name="nationality" />
                                    <field name="student_class" />
                                    <field name="student_shift" />
                                </group>
                             </page>
                           <page name="personal_detail" string="Personal Detail">
                                <group col="4" colspan="4" name="personal_details">
                                    <field name="student_father_name" />
                                    <field name="student_mother_name" />
                                    <field name="student_houseno" />
                                    <field name="student_streetno" />
                                    <field name="student_locality" />
                                    <field name="student_city" />
                                    <field name="student_pincode" />
                                    <field name="student_state" />
                                    <field name="contact_number" />
                                    <field name="alternate_contact_number" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_view_students">
            <field name="name">Students</field>
            <field name="res_model">student.student</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new student
                </p>
            </field>
        </record>
        <menuitem id="menu_school" name="School"/>
        <menuitem id="school_student" name="Students" parent="menu_school"
                  action="action_view_students"/>
  </data>
</odoo>