<odoo>
  <data>
        <record id="view_shift_tree" model="ir.ui.view">
            <field name="name">student.shift.tree</field>
            <field name="model">student.shift</field>
            <field name="arch" type="xml">
                <tree string="Shift">
                    <field name="shift_name" />
                    <field name="shift_timing" />                                  
                </tree>
            </field>
        </record>
      
      <record id="view_shift_form" model="ir.ui.view">
            <field name="name">student.shift.form</field>
            <field name="model">student.shift</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Shift">
                    <sheet>
                        <notebook colspan="4">
                            <page name="shift_information" string="shift Information">
                                <group col="4" colspan="4" name="shift_detail">
                                      <field name="shift_name" />
                                      <field name="shift_timing" />
                                </group>
                             </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
      
        <record model="ir.actions.act_window" id="action_view_shift">
            <field name="name">Shift</field>
            <field name="res_model">student.shift</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Provide all Shift details
                </p>
            </field>
        </record>
        <menuitem id="school_shift" name="Shift" parent="menu_school"
                  action="action_view_shift"/>
  </data>
</odoo>