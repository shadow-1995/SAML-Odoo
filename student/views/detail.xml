<odoo>
  <data>
        <record id="view_detail_tree" model="ir.ui.view">
            <field name="name">student.detail.tree</field>
            <field name="model">student.detail</field>
            <field name="arch" type="xml">
                <tree string="Detail">
                    <field name="class_detail" />
                    <field name="subject" />
                    <field name="teacher" />
                    <field name="shift" />
                </tree>
            </field>
        </record>
      
      <record id="view_detail_form" model="ir.ui.view">
            <field name="name">student.detail.form</field>
            <field name="model">student.detail</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Detail">
                    <sheet>
                        <notebook colspan="4">
                            <page name="detail_information" string="Detail Information">
                                <group col="4" colspan="4" name="detail_detail">
                                      <field name="class_detail" />
                                      <field name="subject" />
                                      <field name="teacher" />
                                      <field name="shift" />
                                </group>
                             </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
      
        <record model="ir.actions.act_window" id="action_view_detail">
            <field name="name">Detail</field>
            <field name="res_model">student.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    All Details
                </p>
            </field>
        </record>
        <menuitem id="school_detail" name="Detail" parent="menu_school"
                  action="action_view_detail"/>
  </data>
</odoo>